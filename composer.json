{
    "name": "milanzor/c3i",
    "description": "c3i",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.6.0",
        "cakephp/cakephp": "^3",
        "cakephp/migrations": "^1.8.0",
        "cakephp/plugin-installer": "^1.0",
        "josegonzalez/dotenv": "3.*",
        "mobiledetect/mobiledetectlib": "2.*"
    },
    "require-dev": {
        "cakephp/bake": "^1.1",
        "cakephp/cakephp-codesniffer": "^3.0",
        "cakephp/debug_kit": "master",
        "phpunit/phpunit": "^5.7|^6.0",
        "psy/psysh": "@stable"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "App\\Console\\Installer::postInstall",
            "App\\Console\\C3I::logo",
            "App\\Console\\C3I::setupDatabase",
            "App\\Console\\C3I::databaseSessions",
            "App\\Console\\C3I::notifyYarnTime",
            "yarn install --silent && yarn build:no-progress"
        ],
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "test": "phpunit --colors=always"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
